{
  "name": "stat-explorer",
  "version": "1.0.0-beta",
  "description": "",
  "main": "main.js",
  "scripts": {
    "build": "mkdir -p build && browserify src/*.js --debug --transform [ babelify ] --plugin [minifyify --map build/bundle.js.map --output build/bundle.js.map ] --outfile build/bundle.js && echo built bundle.js",
    "ci": "npm run lint && npm run coverage && npm run coverage:report",
    "coverage": "istanbul cover -v --root src/ --include-all-sources ./node_modules/.bin/_mocha -- --compilers js:babel-core/register --check-leaks \"test/**/*.js\"",
    "coverage:report": "CODECLIMATE_REPO_TOKEN=NEED_A_TOKEN codeclimate-test-reporter < coverage/lcov.info",
    "lint": "eslint --config .eslintrc src/ test/",
    "test": "mocha --compilers js:babel-core/register --check-leaks \"test/**/*.js\"",
    "watch": "npm-watch"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "quiet": true
    },
    "ci": {
      "patterns": [
        "src",
        "test"
      ],
      "quiet": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alxndr/stat-explorer.git"
  },
  "author": "alxndr <alxndr+npm@gmail.com> http://eleven-twelve.net",
  "homepage": "https://github.com/alxndr/stat-explorer#readme",
  "bugs": {
    "url": "https://github.com/alxndr/stat-explorer/issues"
  },
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-async-to-generator",
      "transform-runtime"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "codeclimate-test-reporter": "^0.3.1",
    "eslint": "^3.2.0",
    "istanbul": "^1.0.0-alpha.2",
    "minifyify": "^7.3.3",
    "mocha": "^2.5.3",
    "npm-watch": "git://github.com/alxndr/npm-watch.git#quiet"
  }
}
